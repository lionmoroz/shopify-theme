{% if section.settings != blank %}
  <div class="sudheader">
    <div class="sudheader_menu">
      {%- for block in section.blocks -%}
        <div class="menu__item">
          <span class="icon icon-icon-car"></span>
          <p class="menu__title">{{ block.settings.text_field | escape }}
          </p>
        </div>
      {%- endfor -%}
    </div>
  </div>
  <script>
    // Sliders
    $('.sudheader_menu').slick({
      infinite: true,
      slidesToShow: 3,
      slidesToScroll: 3,
      prevArrow: "<a class='sudheader_prev' alt='1'><span class='icon-icon-left'></span></a>",
      nextArrow: "<a class='sudheader_next' alt='2'><span class='icon-icon-right'></span></a>",
      responsive: [
        {
          breakpoint: 1200,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 2
          }
        }, {
          breakpoint: 750,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }
      ]
    });
  </script>

{% endif %}



{% schema %}
  {
    "name": "Subheader",
    "tag": "section",
    "max_blocks": 6,
    "class": "subheader",
    "settings": [
      {
        "type": "header",
        "content": "My settings"
      }
    ],
    "blocks": [
      {
        "name": "Text block",
        "type": "text_block",
        "settings": [
          {
            "type": "text",
            "id": "text_field",
            "label": "Text field",
            "default": "Some info"
          }
        ]
      }
    ]
  }
{% endschema %}
